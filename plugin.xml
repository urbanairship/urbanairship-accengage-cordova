<?xml version='1.0' encoding='utf-8'?>
<plugin id="urbanairship-accengage-cordova"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
        
    <name>urbanairship-accengage-cordova</name>
    <description>Urban Airship-Accengage Cordova plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,urbanairship</keywords>
    <repo>https://github.com/urbanairship/urbanairship-accengage-cordova.git</repo>
    
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="urbanairship-accengage-cordova">
                <param name="ios-package" value="urbanairship-accengage-cordova" />
            </feature>
        </config-file>
        
        <!-- Airship library -->
        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git"/>
            </config>
            <pods use-frameworks="true">
                <pod name="Airship/Accengage" spec="13.1.0" />
            </pods>
        </podspec>
        
    </platform>
    
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="urbanairship-accengage-cordova">
                <param name="android-package" value="urbanairship-accengage-cordova.urbanairship-accengage-cordova" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml">
        </config-file>
    </platform>
    
</plugin>
